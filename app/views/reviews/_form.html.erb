<div class="review">
  <p class="review-p">レビューを書く</p>

  <% if review.errors.any? %>
    <div class="notification is-danger">
      <h2><%= review.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="rating-box">

    <%= form_with model: review, url: lure_reviews_path(lure), local: true do |f| %>

      <div class="main-rating">
        <div class="ratings">
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
        </div>
        <div class="rating-value-display"><span id="rating-value-display">0</span>/5</div>
      </div>
      
      <div class="rating-form">
        <%= f.hidden_field :lure_id, value: lure.id %>
        <%= f.hidden_field :score, id: "rating-value" %>
        <%= f.text_field :content, class: "textarea" %>
        <%= f.submit "保存", class: "button" %>
      </div>

      <%= link_to "他のレビューを見る", lures_path,  class: "button back" %>

    <% end %>

  </div>
</div>

<%= javascript_include_tag "reviews.js" %>