<div class="user-box">
  <div class="profile-box">

    <%= form_with model: @user, url: { action: :update }, html: { class: 'cardeditForm' }, local: true do |f| %>

      <% if @user.errors.any? %>
        <p class="text-danger">名前は1～255文字以内で入力してください</p>
      <% end %>

      <div class="name-box">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名" %>
      </div>

      <div class="email-box">
        <%= f.label :email %>
        <%= f.text_area :email, class: "form-control", placeholder: "E-mail" %>
      </div>

      <div class="text-center">
        <%= f.submit "更新する", class: "submitBtn" %>
      </div>

    <% end %>

  </div>
</div>